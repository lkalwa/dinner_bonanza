<div class="row justify-content-center">
  <div class="col-7 gy-xl-4">
    <div class="row">
      <%= link_to " << Recipes list", @back_url %>
    </div>
    <div class="card gy-2">
      <div class="chip-recipe-photo-big card-img-top" style="background-image: url('<%= @recipe.image_url %>')"></div>
      <div class="card-body">
        <h1 class="card-title display-3"><%= @recipe.title %></h1>
        <p class="card-text">Preparation time: <%= @recipe.prep_time %></p>
        <p class="card-text">Cooking time: <%= @recipe.cook_time %></p>
        <p class="card-text">Ingredients:</p>
        <div class="row">
          <div class="col">
            <ul>
              <% @recipe.ingredients.each do |ing| %>
                <li><%= ing.content %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>